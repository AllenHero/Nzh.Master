@*@using iLean.Web*@
<!DOCTYPE html>
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_LayoutiLean.cshtml";
}
<html>

<head>
    <style>
        html, body {
            overflow: hidden !important;
        }
        iframe::-webkit-scrollbar {
            display: none;
        }

       
    </style>
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport' />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="/Content/assets/stylesheets/index.css" rel="stylesheet" />
    <script src='/Content/js/jquery/jquery.js' type='text/javascript'></script>
    
    @RenderSection("head", required: false)
</head>
<body class=" hold-transition sidebar-mini" style="overflow:hidden;">
    @Html.Partial("~/Views/iLean/TopBar.cshtml")
    <div id='wrapper' class="wrapper">

        @Html.Partial("~/Views/iLean/LeftMenu.cshtml")

        <section id='content' class="content-wrapper">
            <div class='row-fluid content-tabs'>
                <button class="roll-nav roll-left tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="row-fluid page-tabs menuTabs">
                    <div class="page-tabs-content" style="margin-left: 0px;">
                        <a href="javascript:;" class="menuTab active" data-id="self/my/MyTask">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right tabRight">
                    <i class="fa fa-forward" style="margin-left: 3px;"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown tabClose" data-toggle="dropdown">
                        页签操作<i class="fa fa-caret-down" style="padding-left: 3px;"></i>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-left">
                        <li><a class="tabReload" href="javascript:void(0);">刷新当前</a></li>
                        <li><a class="tabCloseCurrent" href="javascript:void(0);">关闭当前</a></li>
                        <li><a class="tabCloseAll" href="javascript:void(0);">全部关闭</a></li>
                        <li><a class="tabCloseOther" href="javascript:void(0);">除此之外全部关闭</a></li>
                    </ul>
                    <button class="fullscreen roll-right" style="width:40px;padding-left:0px"><i class="fa fa-arrows-alt"></i></button>
                </div>
            </div>
            <div class='row-fluid' id='content-wrapper'>
                <div class="span12 box">
                    <div class="row-fluid">
                        <div class='span12'>
                            <div class='box-content'>
                                <div class='main_content content-iframe'>
                                    <div class="J_mainContent mainContent" id="content-main">
                                        <iframe class="J_iframe LRADMS_iframe" gesture="media" allow="encrypted-media" allowfullscreen id="myFrame" src="self/my/MyTask" data-id="self/my/MyTask" name="myFrameName" width=100% height=100% frameborder="0" seamless></iframe>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                    <small class='muted' style="position:absolute;bottom:-20px;left:20%;margin-left:20%;">Copyright© 深圳市数本科技开发有限公司 版权所有</small>
                </div>

            </div>

        </section>
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/Content/assets/javascripts/index.js"></script>
    <script type="text/javascript">
        function menu_Click(url) {
            //$('#navigation').attr('style', ' width:25px;');
            $('.J_iframe').attr('src', url);//设置属性 链接地址的值
        }


    </script>

   

</body>
</html>