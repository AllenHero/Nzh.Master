
@{
    Layout = null;
}
<!DOCTYPE html>

<html>

<head>
    <title>用户登陆</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport' />
    <!--[if lt IE 9]>
    <script src='~/Content/assets/javascripts/html5shiv.js' type='text/javascript'></script>
    <![endif]-->
    <link href='~/Content/assets/stylesheets/bootstrap/bootstrap.css' media='all' rel='stylesheet' type='text/css' />
    <link href='~/Content/assets/stylesheets/bootstrap/bootstrap-responsive.css' media='all' rel='stylesheet' type='text/css' />
    <link href="/Content/js/toastr/toastr.css" rel="stylesheet" />
    <link href="/Content/js/Loading/loading.css" rel="stylesheet" />

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        body {
            background-image: url("/Content/assets/images/loginbg.jpg");
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-color: #464646;
        }

        .col-center {
            display: inline-block;
            float: none;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="container" style="margin-top:120px;">
        <div class="row" style="height:100px;">
            <div class="span12" style="font-size:30pt;color:#fff;text-align:center;">
                <span><img src="~/Content/assets/images/logoNew.png" style="height:30px;" /></span>
                <span>智慧精益管理系统</span>
            </div>
        </div>
        <div class="row" style="height:45px;">
            <div class="span12 text-center" style="font-size:20pt;color:#fff;">
                登&nbsp;&nbsp;录
            </div>
        </div>
        <div class="row  row-center">
            <div class="span12 text-center">
                <input type="text" placeholder="请输入租户编号" id="tenantid" name="tenantid" class="input-medium search-query" style="height:35px;width:250px;border-radius:20px; margin:8px;">
            </div>
        </div>
        <div class="row  row-center">
            <div class="span12 text-center">
                <input type="text" placeholder="请输入工号或手机号" id="account" name="account" class="input-medium search-query" style="height:35px;width:250px;border-radius:20px; margin:8px;">
            </div>
        </div>
        <div class="row  row-center">
            <div class="span12 text-center">
                <input type="password" placeholder="请输入密码" id="password" name="password" class="input-medium search-query" style="height:35px;width:250px;border-radius:20px;margin:8px;">
            </div>
        </div>
        <div class="row row-center">
            <div class="span12 text-center">
                <span>
                    <a href="#" id="btnRecoverPW" style="color:#fff;text-decoration-color:#fff;text-decoration-line:underline;">忘记密码?</a>
                    <input type="checkbox" id="remember_me" style="display:none;" checked="checked" />
                </span>
            </div>
        </div>
        <div class="row row-center" style="margin-top:20px;">
            <div class="span12 text-center">
                <span>
                    <input type="button" onclick="UserLogin()" name="button" class="btn input-medium search-query" style="height:45px;width:270px;border-radius:20px;color:#1A94E6;font-weight:bold;" value="确 认" />
                </span>
            </div>
        </div>
        <div class="row row-center" style="margin-top:10px;">
            <div class="span12 text-center">
                <span style="font-size:10pt;color:darkgray;">Copyright© 深圳市数本科技开发有限公司 版权所有</span>
            </div>
        </div>
    </div>


    <!-- 新增维修模态框（Modal） -->
    <div class="modal hide fade" id="myModal" tabindex="-2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">
                        信息提示
                    </h4>
                </div>
                <div class="modal-body" id="divReportContent" style="overflow-y:scroll;" data-senddataId="">
                    <h5>目前不支持个人找回密码，请联系管理员重置密码!</h5>
                </div>
                <div class="modal-footer" style="text-align:center;">
                    <button type="button" class="btn btn-default" id="btnNgContent" data-Result="1" data-dismiss="modal">确定</button>
                </div>
            </div>
        </div>
    </div>

    <!-- / jquery -->
    <script src='~/Content/assets/javascripts/jquery/jquery.min.js' type='text/javascript'></script>
    <!-- / jquery mobile events (for touch and slide) -->
    <script src='~/Content/assets/javascripts/plugins/mobile_events/jquery.mobile-events.min.js' type='text/javascript'></script>
    <!-- / jquery migrate (for compatibility with new jquery) -->
    <script src='~/Content/assets/javascripts/jquery/jquery-migrate.min.js' type='text/javascript'></script>
    <!-- / jquery ui -->
    <script src='~/Content/assets/javascripts/jquery_ui/jquery-ui.min.js' type='text/javascript'></script>
    <!-- / bootstrap -->
    <script src='~/Content/assets/javascripts/bootstrap/bootstrap.min.js' type='text/javascript'></script>

    <script src="/Content/js/toastr/toastr.js"></script>
    <script src="/Content/js/Loading/loading.js"></script>
    <script src="/Content/js/Loading/loadinglocation.js"></script>
    <script src="~/Content/js/core/utils.js"></script>
    <script src="~/Content/js/core/common.js"></script>
    <script src="~/Content/js/core/cookie.js"></script>
    <script src="~/Content/js/iLean/login.js"></script>
</body>

</html>

